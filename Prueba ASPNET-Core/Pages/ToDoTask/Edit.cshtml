@page
@model Prueba_ASPNET_Core.Pages.ToDoTask.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ToDoTasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToDoTasks.TaskId" />
            <div class="form-group">
                <label asp-for="ToDoTasks.Title" class="control-label"></label>
                <input asp-for="ToDoTasks.Title" class="form-control" />
                <span asp-validation-for="ToDoTasks.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoTasks.Description" class="control-label"></label>
                <input asp-for="ToDoTasks.Description" class="form-control" />
                <span asp-validation-for="ToDoTasks.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoTasks.DueDate" class="control-label"></label>
                <input asp-for="ToDoTasks.DueDate" class="form-control" />
                <span asp-validation-for="ToDoTasks.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoTasks.Prority" class="control-label"></label>
                <input asp-for="ToDoTasks.Prority" class="form-control" />
                <span asp-validation-for="ToDoTasks.Prority" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ToDoTasks.IsCompleted" /> @Html.DisplayNameFor(model => model.ToDoTasks.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ToDoTasks.CategoryId" class="control-label"></label>
                <select asp-for="ToDoTasks.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="ToDoTasks.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
